pipeline {
    agent any
    environment {
        CREDS = credentials('gitconnect')
    }
    stages {
        stage('build') {
            steps {
                echo 'building the application'
            }
        } 
        stage('test') {
            steps {
                echo 'testing application'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying application' 
            }
        }
        stage('path added') {
            steps {
                echo 'path adding'
                echo "deploying with ${CREDS}"
                echo 'use the crediatial as mentioned above'
            }
        }
    }
}
