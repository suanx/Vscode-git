//basic syntax for Jenkinsfile
pipeline {
    agent any
    parameters{
        choice(name: 'VERSION',choice['1.1.1'],['1.2.3'], description'')
        booleanParam(name:'executeing tasks', defaultValue: true , description:'')
    }
    stages{
      stage('build'){
        when{
            expression{
                Params.executeing tasks
            }
        }
            steps{
                
            }
        } 
        stage('test'){
            steps{
                
            }
        }
        stage('deploy'){
            steps{
                echo "deploying ${Params.VERSION}"
                
            }
        }
    }
}
