pipeline {
    agent any

    parameters {
        choice(name: 'VERSION', choices: ['1.1.1', '1.2.3'], description: 'Select the version to deploy')
        booleanParam(name: 'executingTasks', defaultValue: true, description: 'Enable or disable executing tasks')
    }

    stages {
        stage('build') {
            when {
                expression {
                    params.executingTasks
                }
            }
            steps {
                echo "Building project"
                // Add your build steps here
            }
        }
        stage('test') {
            steps {
                echo "Testing project"
                // Add your test steps here
            }
        }
        stage('deploy') {
            steps {
                echo "Deploying version ${params.VERSION}"
                // Add your deploy steps here
            }
        }
    }
}
