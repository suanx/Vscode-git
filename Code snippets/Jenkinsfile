//basic syntax for Jenkinsfile
pipeline {
    agent any
    environment{
        CREDS = Credentials('gitconnect')
    }
    stages{
      stage('build'){
            steps{
                echo 'building the application'
                echo "note my credential ${USRN} ${PASWD}"
            }
        } 
        stage('test'){
            steps{
                echo 'testing application'
            }
        }
        stage('deploy'){
            steps{
               echo 'deploying application' 
            }
        }
        stage('path added'){
            steps{
               echo 'path adding'
                echo "deploying with ${CREDS}"
            }
        }
    }
}
